apiVersion: v1
kind: PersistentVolume
metadata:
  name: backup-{{ name }}-pv
  labels:
    pv-usage: backup-{{ name }}
spec:
  storageClassName: standard
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce
  capacity:
    storage: {{ storage_size }}
  hostPath:
    path: /tmp/hostpath_pv/{{ name }}-pv-backup/
